{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [       
       {
           "name": "(Windows) Attach",
           "type": "cppvsdbg",
           "request": "attach",
           "processId": "${command:pickProcess}"
       },
       {
           "name": "(Windows) Launch",
           "type": "cppvsdbg",
           "request": "launch",
           "program": "${workspaceFolder}/Samples/Simple/bin/Debug/netcoreapp2.1/CefAdapter.Browser.exe",
           "args": ["--url=http://www.uol.com.br"],
           "stopAtEntry": false,
           "cwd": "${workspaceFolder}/Samples/Simple/bin/Debug/netcoreapp2.1/",
           "environment": [],
           "externalConsole": true
       },
       {
           "name": "(gdb) Launch",
           "type": "cppdbg",
           "request": "launch",
           "program": "${workspaceFolder}/build/CefAdapter.Browser/Debug/CefAdapter.Browser.exe",
           "args": [],
           "stopAtEntry": false,
           "cwd": "${workspaceFolder}/build/CefAdapter.Browser/Debug",
           "environment": [],
           "externalConsole": true,
           "MIMode": "gdb",
           "miDebuggerPath": "/path/to/gdb",
           "setupCommands": [
               {
                   "description": "Enable pretty-printing for gdb",
                   "text": "-enable-pretty-printing",
                   "ignoreFailures": true
               }
           ]
       },
       { 
           "name": "(gdb) Attach",
           "type": "cppdbg",
           "request": "attach",
           "program": "${workspaceFolder}/build/CefAdapter.Browser/Debug/CefAdapter.Browser.exe",
           "processId": "${command:pickProcess}",
           "MIMode": "gdb",
           "setupCommands": [
               {
                   "description": "Enable pretty-printing for gdb",
                   "text": "-enable-pretty-printing",
                   "ignoreFailures": true
               }
           ]
       },
        {
            "name": "Simple Sample",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "Simple.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Samples/Simple/bin/Debug/netcoreapp2.1/",
            // For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Angular Sample",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildAngular",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "Angular.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Samples/Angular/bin/Debug/netcoreapp2.1/",
            // For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "React Sample",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildReact",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "React.dll",
            "args": [],
            "cwd": "${workspaceFolder}/Samples/React/bin/Debug/netcoreapp2.1/",
            // For more information about the 'console' field, see https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md#console-terminal-window
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ,]
}